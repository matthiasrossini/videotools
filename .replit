modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Flask Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test YouTube Downloader"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test YouTube Downloader with Complex Filename"

[[workflows.workflow]]
name = "Start Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Test YouTube Downloader"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -c \"from utils.youtube_downloader import download_youtube_video; print(download_youtube_video('https://www.youtube.com/watch?v=dQw4w9WgXcQ', 'temp', 0, 10))\""

[[workflows.workflow]]
name = "Test YouTube Downloader with Complex Filename"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -c \"from utils.youtube_downloader import download_youtube_video; print(download_youtube_video('https://www.youtube.com/watch?v=dQw4w9WgXcQ', 'temp', 0, 10))\""

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
